<nav>
    <h2>
        {% if ocr.previous_job %}
            <a href="/{{ocr.previous_job}}">Previous</a>&#32;
        {% endif %}
        {{folder.parent.name}}: {{folder.name}}&#32;

        {% if ocr.next_job %}
            <a href="/{{ocr.next_job}}">Next</a>
        {% endif %}
    </h2>

    <details open>
        <summary>OCR</summary>
        <form action="/ocr/start/{{folder}}">
            <input type=hidden name=referer value="{{request.url}}">
            <label>
                <input type=checkbox name=keep_going value=1>
                Scan next chapters/folders too
            </label>
            <label>
                <input type=checkbox name=recursive value=1>
                Recurse down subfolders
            </label>
            <label>
                <input type=checkbox name=prioritize value=1>
                Add to front of the queue
            </label>
            <button type=submit>Start</button>
        </form>
    </details>
    <br>
</nav>
