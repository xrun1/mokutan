<nav>
    <h2>
        {% set parent = path.unextracted.parent %}
        {% if parent == path %}
            <a title="This PC" href="/">⭡</a>&#32;
        {% else %}
            <a title=Parent href="{{to_url(parent)}}#{{to_anchor(path)}}">
                ⭡
            </a>&#32;
        {% endif %}

        {% if path.previous_chapter %}
            <a title=Previous href="{{to_url(path.previous_chapter)}}">
                ⭠
            </a>&#32;
        {% endif %}

        {{path.name or path}}&#32;

        {% if path.next_chapter %}
            <a title=Next href="{{to_url(path.next_chapter)}}">⭢</a>
        {% endif %}
    </h2>

    <details open>
        <summary>OCR</summary>
        <form action="/ocr/start{{to_url(path)}}">
            <input type=hidden name=referer value="{{request.url}}">
            <label>
                <input type=checkbox name=keep_going value=1>
                Scan next chapters/folders too
            </label>
            <label>
                <input type=checkbox name=recursive value=1>
                Recurse down subfolders
            </label>
            <label>
                <input type=checkbox name=prioritize value=1>
                Add to front of the queue
            </label>
            <button type=submit>Start</button>
        </form>
    </details>
    <br>
</nav>
