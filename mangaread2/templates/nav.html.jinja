<nav>
    <h2>
        {% if folder.origin == folder %}
            <a title="This PC" href="/">⭡</a>&#32;
        {% else %}
            <a title=Parent href="{{to_url(folder.origin)}}">⭡</a>&#32;
        {% endif %}

        {% if ocr.previous_job %}
            <a title=Previous href="{{to_url(ocr.previous_job)}}">⭠</a>&#32;
        {% endif %}

        {{folder.name or folder}}&#32;

        {% if ocr.next_job %}
            <a title=Next href="{{to_url(ocr.next_job)}}">⭢</a>
        {% endif %}
    </h2>

    <details open>
        <summary>OCR</summary>
        <form action="/ocr/start{{to_url(folder)}}">
            <input type=hidden name=referer value="{{request.url}}">
            <label>
                <input type=checkbox name=keep_going value=1>
                Scan next chapters/folders too
            </label>
            <label>
                <input type=checkbox name=recursive value=1>
                Recurse down subfolders
            </label>
            <label>
                <input type=checkbox name=prioritize value=1>
                Add to front of the queue
            </label>
            <button type=submit>Start</button>
        </form>
    </details>
    <br>
</nav>
